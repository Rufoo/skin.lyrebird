			</control>
			<control type="image">
				<left>40</left>
				<top>610</top>
				<right>40</right>
				<bottom>40</bottom>
				<texture colordiffuse="66000000" border="5">listselect_fo.png</texture>
				<visible>Control.IsVisible(909)</visible>
			</control>
			<control type="panel" id="909">
				<left>45</left>
				<top>615</top>
				<width>1830</width>
				<height>420</height>
				<include>OnBackInclude</include>
				<ondown>909</ondown>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>909</onright>
				<onup>909</onup>
				<orientation>horizontal</orientation>
				<viewtype label="Sauna">list</viewtype>
				<scrolltime tween="quadratic">400</scrolltime>
				<itemlayout width="305" height="140">
					<control type="image">
						<width>305</width>
						<height>140</height>
						<texture background="true" diffuse="diffuse/thumbnail.png" fallback="black.png">$INFO[ListItem.Art(banner)]</texture>
						<aspectratio>stretch</aspectratio>
						<bordersize>5</bordersize>
					</control>
					<control type="image">
						<width>305</width>
						<height>140</height>
						<texture diffuse="diffuse/thumbnail.png">overlays/icon-overlay.png</texture>
						<aspectratio>stretch</aspectratio>
						<bordersize>5</bordersize>
					</control>
				</itemlayout>
				<focusedlayout width="305" height="140">
					<control type="image">
						<width>305</width>
						<height>140</height>
						<texture background="true" diffuse="diffuse/thumbnail.png" fallback="black.png">black.png</texture>
						<aspectratio>stretch</aspectratio>
						<bordersize>5</bordersize>
						<bordertexture colordiffuse="FF32C4FF" border="5">listselect_fo.png</bordertexture>
						<animation type="Focus" reversible="true">
							<effect type="zoom" center="152.5,70" start="100" end="120" time="200" />
						</animation>
						<animation type="Unfocus">
							<effect type="zoom" center="152.5,70" start="120" end="100" time="0" />
						</animation>
					</control>
					<control type="image">
						<width>305</width>
						<height>140</height>
						<texture background="true">$INFO[ListItem.Art(banner)]</texture>
						<aspectratio>stretch</aspectratio>
						<bordersize>5</bordersize>
						<animation type="Focus" reversible="true">
							<effect type="zoom" center="152.5,70" start="100" end="120" time="200" />
						</animation>
						<animation type="Unfocus">
							<effect type="zoom" center="152.5,70" start="120" end="100" time="0" />
						</animation>
					</control>

				</focusedlayout>				
			</control>
		</control>
		<control type="group">
			<visible>Control.IsVisible(909)</visible>
			<animation type="Visible" reversible="false">
				<effect type="fade" start="0" end="100" delay="300" time="300" tween="sine" easing="in" />
