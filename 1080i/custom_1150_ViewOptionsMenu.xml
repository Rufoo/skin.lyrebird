<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1150">
    <defaultcontrol always="true">9011</defaultcontrol>
    <onunload>ClearProperty(viewtypeoptions,home)</onunload>
    <onload condition="String.IsEmpty(Window(home).Property(viewtypeoptions))">Dialog.Close(1150)</onload>
    <coordinates>
        <left>0</left>
        <top>0</top>
        <system>1</system>
    </coordinates>
    <controls>
        <include content="SideBladeCloseIcon">
            <param name="CloseIconDialogClose" value="Dialog.Close(1150)" />
            <param name="CloseIconDialogClose2" value="noop" />
            <param name="ClearMediaMenu" value="ClearProperty(MediaMenu,Home)" />
            <param name="CloseIconSetFocus" value="SetFocus(50)" />
            <param name="CloseIconVisibility" value="system.getbool(input.enablemouse) + Window.IsActive(1150)" />
        </include>
        <control type="group">
            <left>15</left>
            <animation effect="slide" start="-440,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="-440,0" time="160" tween="quadratic" easing="out">WindowClose</animation>
            <visible>!Window.IsActive(1129)</visible>
            <control type="label">
                <top>10</top>
                <width>400</width>
                <height>52</height>
                <textoffsetx>15</textoffsetx>
                <font>font13_title</font>
                <label>CUSTOMIZE VIEW</label>
                <textcolor>highlight</textcolor>
            </control>
            <control type="list" id="9011">
				<!-- Viewtype Boxshapes --> 
                <top>62</top>
                <width>400</width>
                <height>840</height>
                <visible>!String.IsEmpty(Window(home).Property(viewtypeoptions))</visible>
                <orientation>vertical</orientation>
                <onright>Dialog.Close(1150)</onright>
                <onright>ClearProperty(MediaMenu,Home)</onright>
                <onright condition="!Window.IsActive(settings)">Control.SetFocus(50)</onright>
                <onright condition="Window.IsActive(settings)">Control.SetFocus(9000)</onright>
                <onup condition="Control.IsVisible(9012)">9012</onup>
                <onup condition="!Control.IsVisible(9012)">9011</onup>
                <ondown condition="Control.IsVisible(9012)">9012</ondown>
                <ondown condition="!Control.IsVisible(9012)">9011</ondown>
                <itemlayout width="400" height="60">
                    <control type="label">
                        <textoffsetx>15</textoffsetx>
                        <width>400</width>
                        <height>60</height>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout width="400" height="60">
                    <control type="image">
                        <width>400</width>
                        <height>60</height>
                        <texture border="5">listselect_fo.png</texture>
                        <colordiffuse>highlight</colordiffuse>
                        <visible>Control.HasFocus(9011)</visible>
                        <include>VisibleFadeEffect</include>
                    </control>
                    <control type="label">
                        <textoffsetx>15</textoffsetx>
                        <width>400</width>
                        <height>60</height>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </focusedlayout>
                <content>
                    <item>
                        <description>Poster</description>
                        <label>Shape: Poster</label>
                        <onclick>Skin.SetString(view960_shape,)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>				
                    <item>
                        <description>Square</description>
                        <label>Shape: Square</label>
                        <onclick>Skin.SetString(view960_shape,square)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>
                    <item>
                        <description>Widescreen</description>
                        <label>Shape: 16:9</label>
                        <onclick>Skin.SetString(view960_shape,widescreen)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>	
                    <item>
                        <description>Blu-Ray</description>
                        <label>Shape: Blu-Ray</label>
                        <onclick>Skin.SetString(view960_shape,bluray)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>	
                    <item>
                        <description>Slim</description>
                        <label>Shape: Slim</label>
                        <onclick>Skin.SetString(view960_shape,slim)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>
                    <item>
                        <description>Wide</description>
                        <label>Shape: Wide</label>
                        <onclick>Skin.SetString(view960_shape,wide)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>	
                    <item>
                        <description>DS</description>
                        <label>Shape: DS</label>
                        <onclick>Skin.SetString(view960_shape,3ds)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>
                    <item>
                        <label>Template: Default</label>
                        <onclick>Skin.SetString(view960_template,)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>	
                    <item>
                        <label>Template: Mini</label>
                        <onclick>Skin.SetString(view960_template,mini)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>
                    <item>
                        <label>Template: Reversed</label>
                        <onclick>Skin.SetString(view960_template,reversed)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>					
                    <item>
                        <label>Template: Compact</label>
                        <onclick>Skin.SetString(view960_template,compact)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>				
                    <item>
                        <label>Template: Maximum</label>
                        <onclick>Skin.SetString(view960_template,maximum)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>
                    <item>
                        <label>Template: Retro</label>
                        <onclick>Skin.SetString(view960_template,famicom)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>
                    <item>
                        <label>Fanart Window: Fanart</label>
                        <onclick>Skin.SetString(view960_window1,)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>						
                    <item>
                        <label>Fanart Window: Snap</label>
                        <onclick>Skin.SetString(view960_window1,snap)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>
                    <item>
                        <label>Fanart Window: Title</label>
                        <onclick>Skin.SetString(view960_window1,title)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>						
                    <item>
                        <label>16:9 Icon: Fanart</label>
                        <onclick>Skin.SetString(view960_fanarticon,)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>						
                    <item>
                        <label>16:9 Icon: Snap</label>
                        <onclick>Skin.SetString(view960_fanarticon,snap)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>	
                    <item>
                        <label>16:9 Icon: Title</label>
                        <onclick>Skin.SetString(view960_fanarticon,title)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>
                    <item>
                        <label>Hide 16:9 Icon Labels</label>
                        <onclick>Skin.ToggleSetting(view960_hidelabels)</onclick>
                        <visible>!Window.IsActive(tvguide) + !Window.IsActive(settings)</visible>
                    </item>						
                </content>
            </control>
            <control type="button" id="9012">
                <visible>!Skin.HasSetting(KioskMode.Enabled) + !Window.IsVisible(settings)</visible>
                <top>1020</top>
                <width>400</width>
                <align>center</align>
                <textoffsetx>30</textoffsetx>
                <font>IconMedium</font>
                <label>B</label>
                <focusedcolor>highlight</focusedcolor>
                <texturefocus />
                <onright>Dialog.Close(1150)</onright>
                <onright>ClearProperty(MediaMenu,Home)</onright>
                <onright>Control.SetFocus(50)</onright>
                <onup>SetFocus(9011,50)</onup>
                <ondown>SetFocus(9011,0)</ondown>
                <onclick>Notification($LOCALIZE[31007],$LOCALIZE[31008])</onclick>
                <onclick>ActivateWindow(1129)</onclick>
            </control>
        </control>
    </controls>
</window>
