<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<expression name="LyrebirdGameSupport">Container.Content(Games) | String.IsEqual(Container.PluginName,plugin.program.advanced.emulator.launcher) | String.IsEqual(Container.PluginName,plugin.program.advanced.mame.launcher) | String.IsEqual(Container.PluginName,plugin.program.iarl) | String.IsEqual(Container.PluginName,plugin.program.hyper.launcher)</expression>
	<expression name="GameSupport">[Container.Content(Games) | String.IsEqual(Container.PluginName,plugin.program.advanced.emulator.launcher)]</expression>
	<include name="GameTrailerAutoplay">
		<control type="button">
			<left>0</left>
			<top>0</top>						
			<onfocus condition="Player.HasVideo">PlayerControl(Stop)</onfocus>
			<onfocus condition="!String.IsEmpty(ListItem.Trailer) + [!Container.OnNext + !Container.OnPrevious]">PlayMedia($INFO[ListItem.trailer],1)</onfocus>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>						
			<animation type="Focus" reversible="true">
				<effect type="fade" delay="800" time="0" />
			</animation>
		</control>
	</include>
	<include name="common.lyrebird.header">
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>80</height>
			<colordiffuse>99000000</colordiffuse>
			<texture>menu_fo.png</texture>
			<aspectratio>stretch</aspectratio>
		</control>

		<control type="grouplist">
			<description>Header Labels</description>
			<left>20</left>
			<top>-2</top>
			<width>900</width>
			<height>80</height>
			<orientation>horizontal</orientation>
			<itemgap>20</itemgap>
			<control type="image">
				<width>60</width>
				<height>80</height>
				<texture colordiffuse="white">$VAR[HeaderIcon]</texture>
				<aspectratio align="left" aligny="center">keep</aspectratio>
				<animation effect="fade" start="0" end="100" time="150">VisibleChange</animation>
			</control>			
			<control type="image">
				<width>30</width>
				<height>84</height>
				<texture colordiffuse="highlight">_lyre/seperator_dot.png</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>
			</control>
			<control type="label">
				<width>auto</width>
				<align>left</align>
				<aligny>center</aligny>
				<font>cirrus_30</font>
				<textcolor>white</textcolor>
                <label>$VAR[SectionName]</label>
				<scroll>false</scroll>
			</control>
			<control type="label">
				<width>auto</width>
				<align>left</align>
				<aligny>center</aligny>
				<font>cirrus_30</font>
				<textcolor>highlight</textcolor>
                <label>></label>
				<scroll>false</scroll>
				<visible>Container.Content(Episodes) | Container.Content(Seasons)</visible>				
			</control>
			<control type="label">
				<width>auto</width>
				<align>left</align>
				<aligny>center</aligny>
				<font>cirrus_30</font>
				<textcolor>white</textcolor>
                <label>$VAR[SubSectionName]</label>
				<scroll>false</scroll>
				<visible>Container.Content(Episodes) | Container.Content(Seasons)</visible>				
			</control>				
		</control>
			<!--<control type="label">
				<description>Section Name</description>
				<width>1920</width>
				<height>80</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font31</font>
				<textcolor>highlight</textcolor>
                <info>System.Time</info>
				<scroll>false</scroll>
			</control>	-->	
		<control type="grouplist">
			<description>Header Labels</description>
			<left>990</left>
			<top>-2</top>
			<width>900</width>
			<height>80</height>
			<align>right</align>
			<orientation>horizontal</orientation>
			<itemgap>20</itemgap>
			<control type="label">
				<description>Section Name</description>
				<width>auto</width>
				<align>left</align>
				<aligny>center</aligny>
				<font>font31</font>
				<textcolor>white</textcolor>
                <label>$INFO[Container.NumItems] $VAR[SectionType] Available</label>
				<scroll>false</scroll>
				<visible>Container.Content(Episodes) | Container.Content(Movies) | Container.Content(TVShows) | $EXP[LyrebirdGameSupport]</visible>
			</control>	
			<control type="image">
				<width>30</width>
				<height>84</height>
				<texture colordiffuse="highlight">_lyre/seperator_dot.png</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>
			</control>
            <control type="image">
                <description>avatar</description>
                <width>60</width>
                <height>80</height>
                <aspectratio align="center" aligny="center" scalediffuse="false">keep</aspectratio>
                <texture diffuse="diffuse/nowplaying.png">$VAR[HomeNowPlayingThumbVar]</texture>
                <visible>[!Window.IsVisible(volumebar) + [!Window.IsVisible(extendedprogressdialog) | Window.IsVisible(script-globalsearch-main.xml) | Window.IsVisible(script-globalsearch-infodialog.xml) | Window.IsVisible(favourites)]] | [Player.Muted + !Window.IsVisible(extendedprogressdialog)]</visible>
            </control>
			<control type="label">
				<description>Section Name</description>
				<width>auto</width>
				<align>left</align>
				<aligny>center</aligny>
				<font>font31</font>
				<textcolor>white</textcolor>
                <label>$INFO[Weather.Temperature]</label>
				<scroll>false</scroll>
				<visible>Container.Content(Episodes) | Container.Content(Movies) | Container.Content(TVShows) | $EXP[LyrebirdGameSupport]</visible>
			</control>	
			<control type="image">
				<width>30</width>
				<height>84</height>
				<texture colordiffuse="highlight">_lyre/seperator_dot.png</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>
			</control>			
			<control type="label">
				<description>Section Name</description>
				<width>auto</width>
				<align>left</align>
				<aligny>center</aligny>
				<font>font31</font>
				<textcolor>ff32C4FF</textcolor>
                <label>$INFO[System.Time]</label>
				<scroll>false</scroll>
			</control>
		</control>	
	</include>
	<variable name="SectionName">
		<value condition="$EXP[LyrebirdGameSupport]">Games</value>
		<value condition="Container.Content(Movies)">Movies</value>		
		<value condition="Container.Content(TVShows)">TV Shows</value>
		<value condition="Container.Content(Seasons)">TV Shows</value>			
		<value condition="Container.Content(Episodes)">TV Shows</value>		
	</variable>
	<variable name="SubSectionName">
		<value condition="Container.Content(Seasons)">$INFO[ListItem.TVShowTitle]</value>			
		<value condition="Container.Content(Episodes)">$INFO[ListItem.TVShowTitle]</value>		
	</variable>
	<variable name="SectionType">
		<value condition="$EXP[LyrebirdGameSupport]">Games</value>		
		<value condition="Container.Content(Movies)">Movies</value>	
		<value condition="Container.Content(TVShows)">Shows</value>
		<value condition="Container.Content(Episodes)">Episodes</value>		
	</variable>
    <include name="LyreMediaFlags">
        <control type="grouplist">
            <left>$PARAM[left]</left>
            <top>$PARAM[top]</top>
            <width>840</width>
            <height>60</height>
            <itemgap>20</itemgap>
            <align>$PARAM[align]</align>
            <orientation>horizontal</orientation>
            <include>VisibleFadeEffect</include>
            <control type="image">
                <height>60</height>
                <include>MediaFlagVars</include>
                <texture>$INFO[ListItem.VideoResolution,flags/resolution/,.png]</texture>
                <visible>!String.IsEmpty(ListItem.VideoResolution) + ![$EXP[isTvshow] | $EXP[isSeason]]</visible>
            </control>
            <control type="image">
                <height>60</height>
                <include>MediaFlagVars</include>
                <texture>$VAR[SourceFlagVar,flags/video/,.png]</texture>
                <visible>!String.IsEmpty(ListItem.VideoCodec) + ![$EXP[isTvshow] | $EXP[isSeason]]</visible>
            </control>
            <control type="image">
                <height>60</height>
                <include>MediaFlagVars</include>
                <texture>$INFO[ListItem.VideoAspect,flags/aspectratio/,.png]</texture>
                <visible>!String.IsEmpty(ListItem.VideoAspect) + [![$EXP[isTvshow] | $EXP[isSeason] | Control.IsVisible(500) | Control.IsVisible(50) | Control.IsVisible(57) | Control.IsVisible(501) | Control.IsVisible(55)] | Window.IsActive(movieinformation)]</visible>
            </control>
            <control type="image">
                <height>60</height>
                <include>MediaFlagVars</include>
                <texture>$INFO[ListItem.AudioCodec,flags/audio/,.png]</texture>
                <visible>!String.IsEmpty(ListItem.AudioCodec) + ![$EXP[isTvshow] | $EXP[isSeason]]</visible>
            </control>
            <control type="image">
                <height>60</height>
                <width>100</width>
                <include>MediaFlagVars</include>
                <texture>$INFO[ListItem.AudioChannels,flags/channels/,.png]</texture>
                <visible>!String.IsEmpty(ListItem.AudioChannels) + ![$EXP[isTvshow] | $EXP[isSeason] | Control.IsVisible(500) | Control.IsVisible(57) | Control.IsVisible(55)]</visible>
            </control>
            <control type="image">
                <height>60</height>
                <width>100</width>
                <include>MediaFlagVars</include>
                <texture>flags/cc.png</texture>
                <visible>!String.IsEmpty(ListItem.SubtitleLanguage) + ![$EXP[isTvshow] | $EXP[isSeason] | $EXP[isEpisode] | Control.IsVisible(500) | Control.IsVisible(501) | Control.IsVisible(57) | Control.IsVisible(55)]</visible>
            </control>
            <control type="image">
                <height>40</height>
                <include>MediaFlagVars</include>
                <texture>resource://resource.images.studios.white/$INFO[ListItem.Studio,,.png]</texture>
                <visible>[$EXP[isTvshow] | $EXP[isSeason]] + !Window.IsVisible(movieinformation)</visible>
            </control>
            <control type="image">
                <height>40</height>
                <include>MediaFlagVars</include>
                <texture fallback="flags/mpaa/NR.png">$VAR[RatingFlagVar]</texture>
                <visible>[$EXP[isTvshow] | $EXP[isSeason]] + !Window.IsVisible(movieinformation)</visible>
            </control>
        </control>
    </include>	
</includes>