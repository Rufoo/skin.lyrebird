<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- xml -->
	<include file="keibertzplus/keibertzplus_poster.xml" />
	<include file="keibertzplus/keibertzplus_square.xml" />
	<include file="keibertzplus/keibertzplus_bluray.xml" />
	<include file="keibertzplus/keibertzplus_wide.xml" />
	<include file="keibertzplus/keibertzplus_slim.xml" />
	<include file="keibertzplus/keibertzplus_3ds.xml" />
	<!-- expressions -->
	<expression name="KeibertzPlusBrightIcons">Container.Content(Episodes) + !Skin.HasSetting(Episodes_902_BrightIcons) | Container.Content(Movies) + !Skin.HasSetting(Movies_902_BrightIcons) | $EXP[GameSupport] + !Skin.HasSetting(Games_902_BrightIcons)</expression>
	<expression name="KeibertzPlusHideLabels">Container.Content(Episodes) + !Skin.HasSetting(Episodes_902_HideLabels) | Container.Content(Movies) + !Skin.HasSetting(Movies_902_HideLabels) | $EXP[GameSupport] + !Skin.HasSetting(Games_902_HideLabels)</expression>
	<expression name="KeibertzPlusHideReflections">Container.Content(Episodes) + !Skin.HasSetting(Episodes_902_HideReflections) | Container.Content(Movies) + !Skin.HasSetting(Movies_902_HideReflections) | $EXP[GameSupport] + !Skin.HasSetting(Games_902_HideReflections)</expression>
	<expression name="KeibertzPlusStaticIcons">Container.Content(Episodes) + !Skin.HasSetting(Episodes_902_StaticIcons) | Container.Content(Movies) + !Skin.HasSetting(Movies_902_StaticIcons) | $EXP[GameSupport] + !Skin.HasSetting(Games_902_StaticIcons)</expression>
	<!-- keibertzplus_label -->
	<include name="KeibertzPlusCommonLabel">
		<definition>
			<control type="label">
				<left>15</left>
				<top>$PARAM[top]</top>
				<width>$PARAM[width]</width>
				<height>40</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>lyre30</font>
				<textcolor>grey</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<scroll>false</scroll>
				<visible>$EXP[KeibertzPlusHideLabels]</visible>
			</control>
		</definition>
	</include>
	<!-- view -->
	<include name="View_902_KeibertzPlus">
		<control type="group">
			<visible>Control.IsVisible(902)</visible>
			<animation type="Visible" reversible="false">
				<effect type="fade" start="0" end="100" time="300" tween="sine" easing="in" />
				<effect type="zoom" start="150" end="100" time="300" center="auto" tween="quadratic" easing="out" />
			</animation>
			<control type="fixedlist" id="902">
				<left>-200</left>
				<top>100</top>
				<width>2475</width>
				<height>840</height>
				<include>OnBackInclude</include>
				<onleft>902</onleft>
				<onright>902</onright>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<orientation>Horizontal</orientation>
				<focusposition>1</focusposition>
				<preloaditems>2</preloaditems>
				<scrolltime tween="sine" easing="out">400</scrolltime>
				<viewtype label="Keibertz+">list</viewtype>
				<include>KeibertzPlus_Square_Includes</include>
				<include>KeibertzPlus_Fanart_Includes</include>
				<include>KeibertzPlus_Bluray_Includes</include>
				<include>KeibertzPlus_Wide_Includes</include>
				<include>KeibertzPlus_Slim_Includes</include>
				<include>KeibertzPlus_3ds_Includes</include>
				<include>KeibertzPlus_Poster_Includes</include>
			</control>
		</control>
		<control type="group">
			<visible>Control.IsVisible(902)</visible>
			<animation effect="fade" start="0" end="100" delay="600" time="300" reversible="false">Visible</animation>
			<include>KeibertzPlusLayoutDefault</include>
		</control>
	</include>
	<!-- options -->
	<include name="KeibertzPlusViewOptions">
	</include>
	<!-- layout_includes -->
	<include name="KeibertzPlusLayoutDefault">
		<control type="label">
            <left>100</left>
            <top>720</top>
            <width>1000</width>
            <height>60</height>
            <align>left</align>
            <aligny>center</aligny>
            <font>font48</font>
            <label>$INFO[ListItem.Label]</label>			
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
            <scroll>true</scroll>
        </control>
		<control type="label">
			<left>100</left>
			<top>800</top>
			<width max="555">auto</width>
			<height>40</height>
			<align>left</align>
			<aligny>center</aligny>
			<font>font15</font>
			<label>[UPPERCASE]$INFO[ListItem.Year]  [COLOR=white]â€¢[/COLOR]  $INFO[ListItem.Genre][/UPPERCASE]</label>
			<textcolor>highlight</textcolor>
			<shadowcolor>black</shadowcolor>
			<scroll>false</scroll>
		</control>
		<control type="textbox">
            <left>100</left>
            <top>890</top>
            <width>1126</width>
            <height>125</height>
            <align>justify</align>
            <font>font13</font>
            <label>$INFO[ListItem.Plot]</label>			
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
            <autoscroll time="2000" delay="3000" repeat="5000">Control.HasFocus(902)</autoscroll>
        </control>
        <control type="image">
            <left>606r</left>
            <top>720</top>
            <width>526</width>
            <height>300</height>
            <texture>black.png</texture>
            <aspectratio>stretch</aspectratio>
			<bordertexture border="5" colordiffuse="33787878">listselect_fo.png</bordertexture>
			<bordersize>5</bordersize>	
        </control>
		<control type="videowindow">
			<left>601r</left>
			<top>725</top>
			<width>516</width>
			<height>290</height>
			<visible>$EXP[GameSupport]</visible>
		</control>
        <control type="image">
            <left>606r</left>
            <top>720</top>
            <width>526</width>
            <height>300</height>
			<fadetime>400</fadetime>
            <texture background="true">$INFO[ListItem.Art(title)]</texture>
            <aspectratio align="center" aligny="center">keep</aspectratio>
			<bordersize>5</bordersize>
			<animation type="Conditional" condition="Player.HasVideo" reversible="false">
				<effect type="fade" start="100" end="0" time="400" />
			</animation>			
        </control>
	</include>
</includes>